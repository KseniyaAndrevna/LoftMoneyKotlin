<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity styles -->
    <style name="DefaultActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ActivityAddStyle" parent="DefaultActivityStyle">
        <item name="android:background">@color/white</item>
    </style>


    <!-- Item Style -->
    <style name="ItemStyle">
        <item name="android:background">@color/item_back_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Elements styles -->
    <style name="EditTextStyle">
        <item name="android:textColor">@color/add_et_color</item>
        <item name="android:textColorHint">@color/add_et_hint_color</item>
        <item name="android:textSize">@dimen/add_et_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:enabled">false</item>
        <item name="android:background">@null</item>
        <item name="android:drawableLeft">@drawable/ic_check</item>
        <item name="android:drawablePadding">@dimen/add_padding_chek</item>
        <item name="android:textColor">@color/color_btn_text</item>
        <item name="android:textSize">@dimen/add_btn_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>.
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/tab_color_primary</item>
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

</resources>

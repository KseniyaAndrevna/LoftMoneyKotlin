<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityAuth"
    tools:context=".AuthActivity">

    <ImageView
        style="@style/IconAuthStyle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/icon_margin_top" />

    <TextView
        style="@style/AppNameAuthStyle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/app_name_text_margin_t" />

    <Button
        android:id="@+id/sign_in_button"
        style="@style/BtnAuthStyle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/btn_sign_margin_t" />

    <TextView
        android:id="@+id/version"
        style="@style/VersionAuthStyle"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/tv_version_margin_b"
        android:layout_weight="1" />
</LinearLayout>